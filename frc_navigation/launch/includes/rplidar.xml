<launch>
  <arg name="frame" default="rplidar"/>
  <arg name="transform" default="0 0 0 0 0 1 0 base_link"/>
  <arg name="topic" default="scan"/>
  <arg name="port" default="0"/>
  <arg name="machine" default="local"/>

  <node machine="$(arg machine)" name="broadcaster" pkg="rplidar_ros" type="rplidarNode" respawn="true" output="screen">
    <remap from="scan" to="$(arg topic)"/>
    <param name="serial_port"         type="string" value="$(eval '/dev/ttyUSB' + str(port))"/>  
    <param name="serial_baudrate"     type="int"    value="115200"/>
    <param name="frame_id"            type="string" value="$(arg frame)"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
  </node>
  <node machine="$(arg machine)" pkg="tf" type="static_transform_publisher" name="link_broadcaster" args="$(eval str(transform) + str(frame) + ' 100')" respawn="true" />
</launch>
